<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-12 col-md-6 col-lg-4 p-4 shadow rounded" style="background-color: #ffffff;">
    <h2 class="text-center mb-4" style="font-weight: bold; color: #333;">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label", style: "font-weight: 500;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "border-radius: 0.5rem;" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary", style: "border-radius: 0.5rem; font-weight: bold;" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
