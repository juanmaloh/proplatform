<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4" style="font-weight: bold; color: #333;">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label", style: "font-weight: 500;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "border-radius: 0.5rem;" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label", style: "font-weight: 500;" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "border-radius: 0.5rem;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input", style: "border-radius: 0.25rem;" %>
          <%= f.label :remember_me, class: "form-check-label", style: "font-weight: 500;" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Log in", class: "btn btn-primary", style: "border-radius: 0.5rem; font-weight: bold;" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
